{
  "name": "voice-input",
  "version": "2.0.0",
  "description": "voice-input makes it easy to add speech recognition input.",
  "license": "MIT",
  "author": "ofk <ofkjpn+npm@gmail.com> (https://github.com/ofk/)",
  "repository": "ofk/voice-input",
  "type": "module",
  "main": "dist/voice-input.cjs",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "microbundle --tsconfig tsconfig.build.json",
    "dev": "npx parcel serve --dist-dir .parcel-dist 'examples/index.html'",
    "lint": "run-s -c lint:*",
    "lint:eslint": "eslint --ext .js,.jsx,.ts,.tsx .",
    "lint:package-json": "prettier-package-json -l",
    "lint:prettier": "prettier --check .",
    "lint:tsc": "tsc",
    "lint-fix": "run-s -c lint-fix:*",
    "lint-fix:eslint": "npm run lint:eslint -- --fix",
    "lint-fix:package-json": "prettier-package-json --write",
    "lint-fix:prettier": "prettier --write .",
    "prepare": "husky install",
    "prepublishOnly": "npm run build",
    "test": "jest"
  },
  "types": "dist/index.d.ts",
  "dependencies": {
    "@types/dom-speech-recognition": "^0.0.4",
    "dom-event-key": "^1.0.1"
  },
  "devDependencies": {
    "@ofk/eslint-config-recommend": "^6.1.2",
    "@types/jest": "^29.5.10",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.1.0",
    "microbundle": "^0.15.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.1.0",
    "prettier-package-json": "^2.8.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  },
  "keywords": [],
  "browserslist": [
    "since 2017-06"
  ],
  "lint-staged": {
    "package.json": "prettier-package-json --write",
    "*.{md,json,html}": "prettier --write",
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix --ext .js,.jsx,.ts,.tsx",
      "prettier --write"
    ]
  },
  "source": "src/index.ts"
}
